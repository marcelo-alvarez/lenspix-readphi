#%Module 1.0
#
# Sigurd's local stuff
#
conflict sigurdkn
set path /home/r/rbond/sigurdkn/local

prepend-path            PATH            $path/bin
prepend-path            LPATH           $path/lib
prepend-path            LD_LIBRARY_PATH $path/lib
prepend-path            MANPATH         $path/share/man
prepend-path            CPATH           $path/include
prepend-path            FPATH           $path/include
prepend-path            PYTHONPATH      $path/lib/python
